  <tr>
    <td>#</td>
    <td><%= link_to(group.title, group_path(group)) %></td>
    <td><%= render_group_description(group) %></td>
    <td><%= group.user.email %></td>
    <td>
      <% if current_user && current_user == group.user %>
        <%= link_to edit_group_path(group), class: "btn btn-sm btn-info" do %><i class="fa fa-pencil"></i><% end %>
        <%= link_to group_path(group),      class: "btn btn-sm btn-danger",
                    method: :delete, data: { confirm: "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
      <% end %>
    </td>
  </tr>
